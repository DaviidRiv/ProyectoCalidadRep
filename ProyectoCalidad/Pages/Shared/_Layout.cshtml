
@using Microsoft.AspNetCore.Authorization;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoCalidad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoCalidad.styles.css" asp-append-version="true" />
    <style>
        #GfG {
            width: 350px;
            height: 80px;
            <!--background-color: green;-->
            <!--color: white;-->
        }
    </style>
</head>
<body>
    <header>       
        @{
            if (User.IsInRole("Administrador"))
            {
                
                         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="font-size: 14px;">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/DAIKIN_logo.svg.png" alt="LogoDaikin" id="GfG"/></a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                    <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Datos/Create">Formulario</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Datos/Index">Dashboard</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Graficas">Gráficas</a>
                                        </li>
                                    </ul>
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                       </nav>
            }
            else if(User.IsInRole("Usuario")){
                       <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="font-size: 14px;">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/DAIKIN_logo.svg.png" alt="LogoDaikin" id="GfG"/></a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                    <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Datos/Create">Formulario</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Datos/DashUser">Dashboard</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Graficas">Gráficas</a>
                                        </li>
                                    </ul>
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                       </nav>  
            }
            else{
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="font-size: 14px;">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-page=""><img src="~/images/DAIKIN_logo.svg.png" alt="LogoDaikin" id="GfG"/></a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">  
                                            <ul class="navbar-nav flex-grow-1">
                                                <li class="nav-item">
                                                </li>
                                                <li class="nav-item">
                                                </li>
                                                <li class="nav-item">
                                                </li>
                                            </ul>
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                       </nav>
            }
        }
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="font-size:14px;">
        <div class="container">
            &copy; 2022 - ProyectoCalidad 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/Autocomplete.js")"></script>
    <script src="@Url.Content("~/js/exporter.js")"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>