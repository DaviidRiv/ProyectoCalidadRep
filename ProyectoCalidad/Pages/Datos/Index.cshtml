                        @Html.DisplayFor(modelItem => item.Componente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Elemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remaches)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentarios)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID_Form"><b>Edit</b></a><br/>  
                        <a asp-page="./Details" asp-route-id="@item.ID_Form"><b>Details</b></a> <br/> 
                        <a asp-page="./Delete" asp-route-id="@item.ID_Form"><b>Delete</b></a>
                    </td>
                </tr>
        }
    
        </tbody>
    </table>

    <div style="text-align:center">
        <a asp-page="./Index" style="font-size:14px;"><b>↩Back to List</b></a><br />
    </div>                 
    <hr />
    <br />
    <br />
    
</body>
