                                @Html.DisplayNameFor(model => model.Formulario_Model[0].Serial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Formulario_Model[0].Job)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Formulario_Model[0].Ensamble)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Formulario_Model[0].Tamanio)
